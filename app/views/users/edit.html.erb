<h2>Edit Your Profile</h2>

<%= form_for @user do |f| %>

	<div>
		<%=f.label :name, "Name" %>
		<%=f.text_field :name %>
	</div>

	<div>
		<%= f.label :username, "Username" %>
		<%= f.text_field :username %>
	</div>

	<div>
		<%= f.label :email, "Email" %>
		<%= f.text_field :email %>
	</div>

	<div>
		<%= f.label :rating, "Rating" %>
		<%= f.text_field :rating %>
	</div>



	 <%=f.submit %>

	<% end %>