<h1>Sign Up!</h1>
<div class = "signup">

<%=form_for @user do |f| %>

	<%=f.text_field :name, :placeholder => "Enter Your Name" %><br>
	<%=f.text_field :username, :placeholder => "Enter Your Username" %><br>
	<%=f.text_field :email, :placeholder => "Enter Your Email" %><br>
	<%=f.text_field :rating, :placeholder => "Enter Your Social Karma" %><br>
	<%=f.password_field :password, :placeholder => "Enter Your Password" %><br>
	<%=f.submit "Create New Account" %>
</div>
<% end %>

<%=button_to "Back", {:controller => 'users', :action => 'index'}, {:method => :get} %>